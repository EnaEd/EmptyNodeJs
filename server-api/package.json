{
  "main": "dist/app",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node -r dotenv/config dist/app.js",
    "build:launch": "tsc && npm run start",
    "start:prod": "tsc && node -r dotenv/config dist/app.js",
    "watch": "nodemon --watch src --ignore 'src/**/*.spec.ts' -e ts --exec npm run build:launch"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 70
  },
  "nodemon": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "tsc && node --inspect -r dotenv/config dist/app.js"
  },
  "dependencies": {
    "@types/koa": "^2.11.2",
    "core-util-is": "^1.0.2",
    "dotenv": "^8.2.0",
    "koa": "^2.11.0"
  },
  "devDependencies": {
    "@types/node": "^13.7.1",
    "nodemon": "^2.0.2",
    "typescript": "^3.7.5"
  }
}
